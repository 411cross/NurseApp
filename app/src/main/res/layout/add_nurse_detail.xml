<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView_name"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="姓名:"
        android:layout_below="@+id/imageButton"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/editText_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Name"
        android:layout_alignBottom="@+id/textView_name"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView_name" />

    <TextView
        android:id="@+id/textView_age"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:layout_below="@+id/textView_name"
        android:text="年龄:"
        android:layout_toStartOf="@+id/editText_name" />

    <EditText
        android:id="@+id/editText_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText_name"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Age"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView_name" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/textView_tel"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editText_age"
        android:text="电话:"
        android:gravity="center"
        android:layout_toStartOf="@+id/editText_age" />

    <EditText
        android:id="@+id/editText_tel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText_age"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Tel"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView_tel" />

    <TextView
        android:id="@+id/textView_sex"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:text="性别:"
        android:gravity="center"
        android:layout_below="@+id/editText_tel"
        android:layout_alignParentStart="true" />

    <RadioGroup
        android:id="@+id/sex"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_below="@+id/textView_tel"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView_tel"
        android:orientation="horizontal"
        >

        <RadioButton
            android:id="@+id/sex_male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.05"
            android:text="男"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/sex_female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/sex_male"
            android:layout_weight="0.05"
            android:text="女" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView_area"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView_sex"
        android:text="地区:"
        android:gravity="center"
        android:layout_alignEnd="@+id/textView_sex" />

    <EditText
        android:id="@+id/editText_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_sex"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Area"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView_sex" />

    <TextView
        android:id="@+id/textView_price"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editText_area"
        android:text="价格:"
        android:gravity="center"
        android:layout_toStartOf="@+id/editText_area" />

    <EditText
        android:id="@+id/editText_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText_area"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Price"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView_price" />

</RelativeLayout>