<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.whatever.nurseapp.nurseapp.activity.UpdateNurse">

    <ImageButton
        android:id="@+id/imageView_head"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@mipmap/avatar"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView_head"
        android:text="姓名:" />

    <EditText
        android:id="@+id/editText_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView1"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView1" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView1"
        android:text="年龄:"
        android:gravity="center"
        android:layout_toStartOf="@+id/editText_name" />

    <EditText
        android:id="@+id/editText_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView1" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView5"
        android:text="电话:"
        android:gravity="center"
        android:layout_toStartOf="@+id/editText_age" />

    <EditText
        android:id="@+id/editText_tel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editText_tel"
        android:text="性别:"
        android:gravity="center"
        android:layout_toStartOf="@+id/editText_tel" />

    <EditText
        android:id="@+id/editText_sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView10"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView10" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView11"
        android:text="地区:"
        android:gravity="center"/>

    <EditText
        android:id="@+id/editText_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView11"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView11" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editText_area"
        android:text="价格:"
        android:gravity="center"
        android:layout_toStartOf="@+id/editText_area" />

    <EditText
        android:id="@+id/editText_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView14"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView12" />

    <Button
        android:id="@+id/button_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:text="删除" />

    <Button
        android:id="@+id/button_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/button_delete"
        android:text="保存" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_below="@+id/textView14"
        android:text="护理范围:"
        android:gravity="center"
         />

    <EditText
        android:id="@+id/editText_filed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText_price"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView4" />

</RelativeLayout>
