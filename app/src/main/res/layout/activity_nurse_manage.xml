<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.whatever.nurseapp.nurseapp.activity.NurseManageActivity"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:id="@+id/search_root">



        <com.whatever.nurseapp.nurseapp.widget.ClearEditText
            android:id="@+id/et_search"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    <ListView
        android:id="@+id/nurse_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/et_search" />

    <View
        android:id="@+id/white_view"
        android:layout_below="@+id/et_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="#ffffff"
        ></View>

    <ListView
        android:id="@+id/name_list"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/et_search"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"></ListView>

